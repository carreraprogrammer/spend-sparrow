<div class="navbar-container">
  <%= render 'shared/back_button'%>
  <%= render 'shared/title', page_title: "NEW PASSWORD"%>
  <%= render 'shared/submit_button', button_title: "Change", form_id: "edit-password-form" %>
</div>

<div class="general-container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: "edit-password-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="text-input-container">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="text-input-container">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
